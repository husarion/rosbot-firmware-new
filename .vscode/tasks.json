{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BUILD (RELEASE)",
            "type": "shell",
            "command": "${workspaceFolder}/firmware_build.sh",
            "windows":{
                "command":"",
                "args":[]
            },
            "args": ["release"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "BUILD (DEBUG)",
            "type": "shell",
            "command": "${workspaceFolder}/firmware_build.sh",
            "args": ["debug"],
            "windows":{
                "command":"",
                "args":[]
            },
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(\\[ERROR\\])*\\s*(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            }
        },
        {
            "label": "FLASH FIRMWARE WHEN BOOTLOADER (RELEASE)",
            "type": "shell",
            "command": "st-flash write ${workspaceFolder}/BUILD/RELEASE/firmware_update.bin 0x08010000",
            "windows": {
                "command": "ST-LINK_CLI",
                "args": [
                    "-P",
                    "${workspaceFolder}\\BUILD\\RELEASE\\firmware_update.bin",
                    "0x08010000",
                    "-V",
                    "\"after_programming\"",
                    "-Rst"
                ]
            },
        },
        {
            "label": "FLASH FIRMWARE WHEN BOOTLOADER (DEBUG)",
            "type": "shell",
            "command": "st-flash write ${workspaceFolder}/BUILD/DEBUG/firmware_update.bin 0x08010000",
            "windows": {
                "command": "ST-LINK_CLI",
                "args": [
                    "-P",
                    "${workspaceFolder}\\BUILD\\DEBUG\\firmware_update.bin",
                    "0x08010000",
                    "-V",
                    "\"after_programming\"",
                    "-Rst"
                ]
            },
        },
        {
            "label": "FLASH FIRMWARE (RELEASE)",
            "type": "shell",
            "command": "st-flash write ${workspaceFolder}/BUILD/RELEASE/firmware.bin 0x08000000",
            "windows": {
                "command": "ST-LINK_CLI",
                "args": [
                    "-P",
                    "${workspaceFolder}\\BUILD\\RELEASE\\firmware.bin",
                    "0x08000000",
                    "-V",
                    "\"after_programming\"",
                    "-Rst"
                ]
            },
        },
        {
            "label": "FLASH FIRMWARE (DEBUG)",
            "type": "shell",
            "command": "st-flash write ${workspaceFolder}/BUILD/DEBUG/firmware.bin 0x08000000",
            "windows": {
                "command": "ST-LINK_CLI",
                "args": [
                    "-P",
                    "${workspaceFolder}\\BUILD\\DEBUG\\firmware.bin",
                    "0x08000000",
                    "-V",
                    "\"after_programming\"",
                    "-Rst"
                ]
            },
        },
        {
            "label": "CLEAN DEBUG",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/BUILD/DEBUG"
        },
        {
            "label": "CLEAN RELEASE",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/BUILD/RELEASE"
        }
    ]
}
